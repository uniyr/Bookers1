<div class="all">
  
  <!--投稿一覧-->
  <h1 class="books">Books</h1>
  
  <table>
    <thead>
      <tr class="table_calum">
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    
    <tbody>
      <tr><% @books.each do |book| %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id)%></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"  %></td>
      </tr><% end %>
    </tbody>
  </table>
  
  <!--新規投稿-->
  <h2 class="books">New book</h2>
  
  <!--editと同じエラー文　機能している-->
  <% if @book.errors.any? %>
  <div id="error_explanation">
    <h3><%= @book.errors.count %>error prohibited this product from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  
  <!--新規投稿　入力欄field-->
  <%= form_with model: @book, url:'/books', local:true do |f| %>
  <div class="field">
    <label for="book_title" id="title">Title</label>
    <div class="book_title" id="book_title"><%= f.text_field :title %></div>
  </div>
  <div class="field">
    <label for="book_body" id="body">Body</label>
    <div class="book_body" id="book_body"><%= f.text_area :body %></div>
  </div>
  <div class="actions"><%= f.submit ' Create Book ' %></div>  
  <% end %>


</div>